// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  picture   String?
  provider  String   // 'google' or 'facebook'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profileCompleted Boolean @default(false)
  
  games     Game[]
  
  // Stats
  totalScore    Int @default(0)
  totalAttempts Int @default(0)
  
  // Trophy tracking
  gamesPlayed          Int     @default(0)
  gamesWon             Int     @default(0)
  currentStreak        Int     @default(0)
  bestStreak           Int     @default(0)
  cardsGuessed         Int     @default(0)
  sharesCount          Int     @default(0)
  totalDonated         Int     @default(0) // Total amount donated in cents
  highScore            Int     @default(0) // Personal best score
  timesBeatenHighScore Int     @default(0) // How many times user has beaten their high score
  uniqueSetsGuessed    String? // JSON array of unique set IDs
  rarityStats          String? // JSON object tracking cards guessed by rarity
  
  createdGameModes GameMode[]
  upvotes          GameModeUpvote[]
  gameSessions     GameSession[]
  trophies         UserTrophy[]
  
  socials          String? // JSON string
}

model Game {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  cardName  String
  cardSet   String
  correct   Boolean
  playedAt  DateTime @default(now())
}

model GameMode {
  id          String   @id @default(uuid())
  name        String
  description String?
  creatorId   String?
  creator     User?    @relation(fields: [creatorId], references: [id])
  
  // Config stored as JSON string
  // { "rounds": 10, "sets": ["151"], "secretOnly": true, "rarities": ["Rare"] }
  configJson  String
  
  isOfficial  Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  upvotes     GameModeUpvote[]
  sessions    GameSession[]
}

model GameModeUpvote {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  gameModeId String
  gameMode   GameMode @relation(fields: [gameModeId], references: [id])
  
  @@unique([userId, gameModeId])
}

model GameSession {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  gameModeId  String?
  gameMode    GameMode? @relation(fields: [gameModeId], references: [id])
  
  score       Int
  maxScore    Int      // Maximum possible score for this session
  rounds      Int
  playedAt    DateTime @default(now())
}

model Trophy {
  id          String   @id @default(uuid())
  key         String   @unique // e.g., "first_steps", "card_master"
  name        String   // Display name
  description String   // Trophy description
  category    String   // "score", "games", "wins", "streak", "cards", "special"
  tier        String   // "bronze", "silver", "gold", "diamond", "special"
  icon        String   // Font Awesome icon name or emoji
  requirement Int      // Required value to unlock
  createdAt   DateTime @default(now())
  
  userTrophies UserTrophy[]
}

model UserTrophy {
  id          String   @id @default(uuid())
  userId      String
  trophyId    String
  unlockedAt  DateTime @default(now())
  progress    Int      @default(0) // Current progress toward trophy
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  trophy      Trophy   @relation(fields: [trophyId], references: [id], onDelete: Cascade)
  
  @@unique([userId, trophyId])
  @@index([userId])
}
